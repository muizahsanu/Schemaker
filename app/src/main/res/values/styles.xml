<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#dedede</item>
        <item name="bottomNavigationStyle">@style/Widget.MaterialComponents.BottomNavigationView</item>
        <item name="switchStyle">@style/Widget.App.Switch</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="colorOnSecondary">@color/colorAccent</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>


    <!--  [START]  Switch Theme -->
    <style name="Widget.App.Switch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Switch</item>
    </style>
    <style name="ThemeOverlay.App.Switch" parent="">
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <!--  [END]  Switch Theme -->

    <style name="TextHeadBold">
        <item name="fontFamily">@font/lin_libertine_rb</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="TextBody">
        <item name="fontFamily">@font/lin_libertine_r</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorPrimary">@android:color/transparent</item>
    </style>

</resources>
