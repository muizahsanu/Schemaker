<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="18dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.GroupSchduleFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_addSchedule_scheduleFrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add new schedule"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:fontFamily="@font/lin_libertine_rb"
        android:paddingStart="4dp"
        android:paddingEnd="12dp"
        android:visibility="gone"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="0dp"
        app:icon="@drawable/ic_round_add_circle_24"
        app:iconSize="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_schedules_scheduleFrag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_addSchedule_scheduleFrag"/>

</androidx.constraintlayout.widget.ConstraintLayout>