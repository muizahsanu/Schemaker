<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_scheduleTitle_groupScheLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:text="Title Schedule"
            android:textSize="18sp"
            android:textColor="@color/colorText"
            android:fontFamily="@font/lin_libertine_rb"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tv_scheduleTanggal_groupScheLayout"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lin_libertine_r"/>
            <TextView
                android:id="@+id/tv_scheduleJam_groupScheLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam"
                android:textColor="@color/colorText"
                android:fontFamily="@font/lin_libertine_r"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8eaf8"/>
    </LinearLayout>


</com.google.android.material.card.MaterialCardView>