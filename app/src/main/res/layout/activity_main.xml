<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_awal"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linear_parent_main"
        android:transitionName="linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center|bottom">

            <ImageView
                android:id="@+id/iv_logo_welcome"
                android:transitionName="logo_image"
                android:layout_width="82dp"
                android:layout_height="82dp"
                android:layout_marginBottom="18dp"
                android:background="#000"/>

            <TextView
                android:id="@+id/tv_greeting_welcome"
                android:transitionName="text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:textAppearance="@style/TextHeadBold"
                android:text="Selamat datang di Schemaker"
                android:textSize="18sp"
                android:textColor="#000"/>
            <TextView
                android:id="@+id/tv_coba"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create your own Schedule\nor Group Schedule with your friend"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#AAAAAA"
                android:textStyle="bold"
                android:textAppearance="@style/TextHeadBold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".9"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_signInGoogle_main"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Sign in with Google"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                app:iconTint="@color/colorAccent"
                app:icon="@drawable/googleg_disabled_color_18"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_signOutGoogle_main"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Sign Out"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_getStarted_main"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="Get Started"
                android:textColor="#d8eaf8"
                android:textSize="16sp"
                android:textAppearance="@style/TextHeadBold"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                android:transitionName="button_login"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Login"
                android:textSize="16sp"
                android:textColor="#d8eaf8"
                android:textAppearance="@style/TextHeadBold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_bottom_main"
            android:transitionName="linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>